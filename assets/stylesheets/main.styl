transitionFast = 0.25s
transitionMedium = 0.5s
transitionSlow = 0.75s

transition()
  -moz-transition arguments
  -webkit-transition arguments
  -o-transition arguments
  transition arguments

transform()
  -moz-transform arguments
  -webkit-transform arguments
  -o-transform arguments
  transform arguments

user-select()
  -webkit-user-select arguments
  -moz-user-select arguments
  -khtml-user-select arguments
  user-select arguments

box-sizing()
  -webkit-box-sizing arguments
  -moz-box-sizing arguments
  -o-box-sizing arguments
  box-sizing arguments

perspective()
  -webkit-perspective arguments
  -moz-perspective arguments
  -o-perspective arguments
  perspective arguments

// Angular animations!
.slide-enter-setup,
.slide-leave-setup
  -webkit-backface-visibility hidden
  -webkit-transform-style preserve-3d
  transition transitionSlow ease all

.slide-enter-setup
  opacity 0
  transform translate3d(500px, 0px , 0px)

.slide-enter-start
  opacity 1
  transform translate3d(0px, 0px , 0px)

.slide-leave-setup
  opacity 1
  transform translate3d(0px, 0px , 0px)

.slide-leave-start
  opacity 0
  transform translate3d(-500px, 0px , 0px)

.coverflow-enter-setup,
.coverflow-leave-setup
  -webkit-backface-visibility hidden
  -webkit-transform-style preserve-3d
  transition transitionSlow ease all
  overflow hidden

.coverflow-enter-setup
  opacity 0 !important
  margin 0 -39% 0 !important

.coverflow-enter-start
  opacity 0.5 !important
  margin 0 -22% !important

.coverflow-leave-setup
  opacity 0.5 !important
  margin 0 -22% !important

.coverflow-leave-start
  opacity 0 !important
  margin 0 -39% 0 !important

// General
a
  text-decoration none
  cursor pointer

#gallery
  user-select none

  .coverflow-container
    height 580px
    overflow hidden
    background #111

  ul.coverflow
    list-style-type none
    padding 20px 0 0
    margin 0
    width 100%
    height 480px
    overflow hidden
    white-space nowrap
    background #111
    // -webkit-box-reflect below 0px -webkit-gradient(linear, left top, left bottom, from(rgba(30, 30, 30, 0.5)), to(#222))
    -webkit-box-reflect: below 0px -webkit-gradient(linear, left top, left bottom, from(transparent), color-stop(50%, transparent), to(rgba(30,30,30,0.2)));

    li
      width 78%
      display inline-block
      perspective 600px
      margin 0 -22%
      position relative
      z-index 1
      opacity 1
      transition transitionSlow ease all
      text-align center

      img
        max-width 100%
        max-height 100%
        padding 4px
        border 1px solid #ccc
        box-sizing border-box
        background #fff
        box-shadow 0 0 8px rgba(0, 0, 0, 0.25)
        transition transitionSlow ease all
  
      &.left
        z-index 0
        opacity 0.5
  
        img
          transform rotateY(45deg) translateZ(-200px)

      &.right
        z-index 0
        opacity 0.5
  
        img
          transform rotateY(-45deg) translateZ(-200px)

  div.current-image
    text-align center
    padding 8px
    position relative

    a.previous, a.next
      position absolute
      display block
      width 120px
      opacity 0
      top 10px
      bottom 15px
      background rgba(0, 0, 0, 0.15)
      transition transitionFast ease all

      &:hover
        opacity 1

      span
        position absolute
        top 50%
        left 0
        display block
        text-align center
        width 100%
        margin-top -30px
        font-size 60px
        font-weight bold
        color #fff

    a.previous
      left 10px

    a.next
      right 10px

    img
      padding 8px
      border 2px solid #ccc
      box-shadow 0 0 8px rgba(0, 0, 0, 0.3)
      width 100%
      height auto
      box-sizing border-box

  ul.player-controls
    list-style-type none
    margin 0
    padding 10px 0 20px
    text-align center

    li
      display inline-block
      margin 0 10px

  ul.thumbs
    list-style-type none
    margin 0
    padding 0
    width 100%
    overflow-x auto
    overflow-y hidden
    white-space nowrap

    li
      display inline-block
      margin 4px
      padding 0

      img
        padding 2px
        border 1px solid #ccc
        cursor pointer
        box-shadow 0 0 3px rgba(0, 0, 0, 0.3)
        opacity 0.8
        transition transitionFast ease all

        &:hover
          opacity 1

        &.current
          background #39f
          border 1px solid #aaa
          opacity 1

